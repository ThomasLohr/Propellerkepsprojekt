@model IEnumerable<WebApplication2.Models.ApplicationUser>

@{
    ViewData["Title"] = "Användare";
    Layout = "_NavbarLayout";
}

<h1>Användare</h1>

<p>
    <a asp-action="Create">Skapa ny</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                E-mail
            </th>
            <th>
                Telefonnummer
            </th>
            <th>
                Datum för registrering
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RegistrationDate)
                </td>
                <td>
                    @Html.ActionLink("Ändra", "EditUser", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Detaljer", "Details", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Ta bort", "Delete", new { /* id=item.PrimaryKey */ })
                </td>
            </tr>
        }
    </tbody>
</table>
