@model WebApplication2.Models.Order

@{ ViewData["Title"] = "Ändra order";
    Layout = "~/Views/Shared/_NavbarLayout.cshtml";
}

<h1>Ändra beställning</h1>
<h4>Redigerar @Html.DisplayFor(modelItem => Model.Id)</h4>
<hr />
<div class="row">
    <div class="col-md-4" style="float:left; margin-top:10px">
        <form asp-action="EditOrder">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="User.Id" class="control-label">Kund ID</label>
                <input asp-for="User.Id" class="form-control" />
                <span asp-validation-for="User.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreatedDate" class="control-label">Datum för beställning</label>
                <input asp-for="CreatedDate" class="form-control" />
                <span asp-validation-for="CreatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShippedDate" class="control-label">Datum skeppad</label>
                <input asp-for="ShippedDate" class="form-control" />
                <span asp-validation-for="ShippedDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="OrderSent" />
                    Order skickad
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Spara" class="btn btn-primary" />
            </div>
        </form>

    </div>
    <div style="float:right; margin-left:100px">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Order
                    </th>
                    <th>
                        Artikel
                    </th>
                    <th>
                        Antal artiklar
                    </th>
                    <th>
                        Totala artiklar
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        1
                    </td>
                    <td>
                        Propellerkeps
                    </td>
                    <td>
                        3
                    </td>
                    <td>
                        3
                    </td>
        </table>
    </div>
</div>

<div>
    <a asp-action="Index">Gå tillbaka</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
